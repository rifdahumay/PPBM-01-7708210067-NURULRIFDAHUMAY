<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Activity_Bioskop1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/imageViewBioskop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img_bioskop1"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewBioskop"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Deskripsi Bioskop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CGV Blitz adalah jaringan bioskop yang memiliki sejarah signifikan di Bandung. Mereka mulai beroperasi di Paris Van Java Mall pada tahun 2006 dan berkembang menjadi jaringan bioskop yang cukup besar, tidak hanya di Bandung tetapi juga di berbagai kota lain seperti Jakarta, Bekasi, Tangerang, Balikpapan, Batam, dan Yogyakarta."
            />


    </LinearLayout>
</LinearLayout>
